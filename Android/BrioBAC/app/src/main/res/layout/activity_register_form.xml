<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mihai.briobac.RegisterForm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#0c6803"
        android:fontFamily="casual"
        android:layout_marginTop="20dp"
        android:id="@+id/activity_register_form_briobacTxt"
        android:text="Inregistrare" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_register_form_linearLayoutText"
        android:layout_below="@+id/activity_register_form_briobacTxt"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FF030868"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/activity_register_form_numeTxt"
            android:text="Nume" />

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/activity_register_form_numeEditText"
            android:textColor="#FF030868"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FF030868"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/activity_register_form_prenumeTxt"
            android:text="Prenume" />

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/activity_register_form_prenumeEditText"
            android:textColor="#FF030868"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FF030868"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/activity_register_form_emailTxt"
            android:text="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/activity_register_form_emailEditText"
            android:textColor="#FF030868"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FF030868"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/activity_register_form_pwdText"
            android:text="Parola" />

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/activity_register_form_pwdEditText"
            android:textColor="#FF030868"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FF030868"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/activity_register_form_pwdConfTxt"
            android:text="Confirmare parola" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/activity_register_form_pwdConfEditText"
            android:textColor="#FF030868"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/activity_register_form_linearLayoutText">



        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Inregistrare"
            android:fontFamily="casual"
            android:id="@+id/activity_register_form_regBtn"
            />

        <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Iesire"
            android:id="@+id/activity_register_form_exitBtn"
            android:fontFamily="sans-serif-smallcaps"
            />
    </LinearLayout>

</RelativeLayout>
